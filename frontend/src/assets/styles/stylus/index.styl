blue-1-color = #418fde;
blue-2-color = #0855a6;
folder-color = #585353;
font-white-color = #FFFFFF;
font-unread-color = #212529;

//Header component /start
.header {
  background : blue-2-color;
}
.settingsbtn, .logoutbtn{
  color: font-white-color;
};
//Header component /end

//Toolbar component /start
.snippet {
  opacity : .6;
  font-size: 0.9em;
}
.searchContainer{
  flex-grow: 2;
  form{
    width: 52%;
  }
}
.inner-addon {
  position: relative;
}

.inner-addon .search-icon {
  position: absolute;
  padding: 10px;
  pointer-events: none;
}

.search-icon{
  color: slategrey;
}

.left-addon .search-icon  { left:  0px;}

.left-addon input  { padding-left:  30px; }
.toolbar{
  a{
    color blue-2-color;
  }
  button.dropdown-item:active {
    background-color: blue-1-color;
    border-color: blue-1-color;
  }
}
.nav-item.show{
  .selectbtn, .actionbtn{
    background : blue-1-color
  }
}

//Toolbar component /end

//Refresh component /start
.sync-btn{
  width 100%;
  margin 0px auto;
  background: blue-1-color;
  border-color: blue-1-color;
  color: font-white-color
  &:hover{
    background blue-2-color;
    border-color: blue-2-color;

  }
}
//Refresh component /end

//Sidebar component /start
.folders {
  .folder-actions{
    opacity  0;
    pointer-events: none;
    transition all 0.7s ease;
  }
  a {
    color folder-color;
    &:hover {
      text-decoration none;
    }
  }
  li {
    &:hover {
      .folder-actions{
        pointer-events: auto;
        opacity  1 ;
        cursor: pointer;
      }
    }
  }

}

.folder-badge{
  background folder-color;
  color white
}
.active-folder{
  border-left 7px solid blue-1-color;
  color:blue-1-color;
  a {
    color: blue-1-color;
  }
  .folder-badge{
    background blue-1-color;
    color white
  }
  &:hover{
    color:blue-1-color;
  }
}
.folder-actions{
  padding 3px;
  margin 3px;
}
.folders> .list-group-item{
  cursor: pointer
}
//Sidebar component /end

//Login component /start
.loginBtn {
  box-sizing: border-box;
  position: relative;
  margin: 0.2em;
  padding: 15px 14px 20px 40px;
  text-align: center
  border: none;
  line-height: 40px;
  white-space: nowrap;
  border-radius: 0.2em;
  font-size: 36px;
  color: #FFF;
  &:hover{
    color: white
  }
}
.loginBtn:before {
  content: "";
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 34px;
  height: 100%;
}
.loginBtn&:focus {
  outline: none;
}
.loginBtn&:active {
  box-shadow: inset 0 0 0 32px rgba(0,0,0,0.1);
}
.loginBtn--google {
  background: #4285f4;

}
.loginBtn--google:before {
  border-right: #4285f4 1px solid;
  background: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/14082/icon_google.png') 6px 6px no-repeat;
  background-position :center
}
.loginBtn--google:hover{
  a{
    color: white!important;
  }
}
.loginBtn--google:focus {
  background: #5B7BD5;
}

.login-background {
  display: flex;
  align-items: center;
  justify-content: center;
  background: url("/src/assets/images/simply_blurred.jpg") no-repeat;
  background-size: cover;
  height: 100vh;
}

//Login component /end

