.loginBtn {
  box-sizing: border-box;
  position: relative;
  margin: 0.2em;
  padding: 15px 14px 20px 40px;
  text-align: center
  border: none;
  line-height: 40px;
  white-space: nowrap;
  border-radius: 0.2em;
  font-size: 36px;
  color: #FFF;
  &:hover{
    color: white
  }
}
.loginBtn:before {
  content: "";
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 34px;
  height: 100%;
}
.loginBtn&:focus {
  outline: none;
}
.loginBtn&:active {
  box-shadow: inset 0 0 0 32px rgba(0,0,0,0.1);
}
.loginBtn--google {
  background: #4285f4;

}
.loginBtn--google:before {
  border-right: #4285f4 1px solid;
  background: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/14082/icon_google.png') 6px 6px no-repeat;
  background-position :center
}
.loginBtn--google:hover{
  a{
    color: white!important;
  }
}
.loginBtn--google:focus {
  background: #5B7BD5;
}

